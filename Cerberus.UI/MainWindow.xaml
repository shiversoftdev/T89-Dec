                        <TranslateTransform X="0" Y="0"/>
                    </Canvas.RenderTransform>
                    <Ellipse xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Canvas.Left="7" Canvas.Top="7" Width="36" Height="36" Fill="#FFFFFFFF" StrokeThickness="0.720339"/>
